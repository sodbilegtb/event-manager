<h1>Edit Event</h1>
<form action="/events/{{index}}/edit" method="POST">
  <input type="text" name="title" value="{{event.title}}" placeholder="Title"><br>
  <textarea name="description" placeholder="Description">{{event.description}}</textarea><br>
  <input type="text" name="category" value="{{event.category}}" placeholder="Category"><br>
  <input type="date" name="date" value="{{event.date}}"><br>
  <input type="text" name="location" value="{{event.location}}" placeholder="Location"><br>
  <button type="submit">Update Event</button>
</form>
<a href="/events">Cancel</a>
